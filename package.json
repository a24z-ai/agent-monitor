{
  "name": "agent-monitor",
  "version": "0.1.0",
  "description": "OpenCode plugin for monitoring and controlling agent tool calls",
  "main": "src/opencode/http-sender.ts",
  "bin": {
    "agent-monitor": "./install.js"
  },
  "scripts": {
    "install-plugin": "node install.js install",
    "uninstall-plugin": "node install.js uninstall",
    "install-local": "node install.js install --local",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun run test:watch",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "biome check --write --no-errors-on-unmatched",
      "biome format --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@opencode-ai/plugin": "^0.6.4",
    "@opencode-ai/sdk": "^0.6.4",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "typescript": "^5.3.0"
  }
}
